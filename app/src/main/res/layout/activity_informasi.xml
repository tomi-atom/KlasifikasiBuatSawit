                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Anggota : Drs. Suprasman, MM \n Joko Risanto, M.Kom \n Haji Gussyafri "
                    android:textSize="14dp"
                    android:fontFamily="monospace"
